{
  "extends": "@gravity-ui/tsconfig",
  "compilerOptions": {
    "noErrorTruncation": true,
    "declaration": true,
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "error",
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": false,
    "outDir": "dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/__tests__", "**/*.test.ts"]
}
