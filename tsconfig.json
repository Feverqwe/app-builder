{
  "extends": "@gravity-ui/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "noErrorTruncation": true,
    "declaration": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": false,
    "outDir": "dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/__tests__", "**/*.test.ts"]
}
